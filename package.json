{
  "name": "postit",
  "version": "1.0.0",
  "description": "A message board app",
  "main": "server/dist/app.js",
  "scripts": {
    "start": "nodemon server/dist/app.js",
    "build-task:scss-compile": "node-sass-chokidar --source-map true template/scss -o template/css",
    "build-task:autoprefixer": "postcss template/css/*.css --use autoprefixer -d template/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'template/scss/**/*.scss' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*",
    "babel": "babel -d ./server/dist ./server/server -s --presets es2015,stage-2",
    "transpile": "nodemon --ignore ./server/dist --exec \"npm run babel\"",
    "test": "./node_modules/.bin/mocha server/dist/test/test"
  },
  "author": "Lawal Lanre Emmanuel",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "mocha": "^3.4.2",
    "morgan": "^1.8.2",
    "nodemon": "^1.11.0",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.3.0",
    "sequelize-cli": "^2.7.0",
    "should": "^11.2.1",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "chai": "^4.0.2",
    "eslint-plugin-react": "^7.1.0",
    "node-sass": "^4.5.3",
    "node-sass-chokidar": "0.0.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larrystone/BC_24_postit.git"
  },
  "bugs": {
    "url": "https://github.com/larrystone/BC_24_postit/issues"
  },
  "homepage": "https://github.com/larrystone/BC_24_postit#readme"
}
